@using appWebEntityFramework.Models
@model List<SucursalCLS> 
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@Html.ActionLink("Agregar","Agregar","Sucursal",null, new {@class = "btn btn-primary" })

<table class="table table-bordered table-hover">

    <thead>
        <tr>
            <td>@Html.LabelFor(p => Model[0].iidsucursal)</td>
            <td>@Html.LabelFor(p => Model[0].nombre)</td>
            <td>@Html.LabelFor(p => Model[0].telefono)</td>
            <td>@Html.LabelFor(p => Model[0].email)</td>
            <td>Operaciones</td>
        </tr>

    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="10%">@item.iidsucursal</td>
                <td width="25%">@item.nombre</td>
                <td width="25%">@item.telefono</td>
                <td width="30%">@item.email</td>

                <td>

                    @Html.ActionLink(" ", "Editar", "Sucursal", new { id = item.iidsucursal}, new { @class = "bi bi-pen btn btn-primary" })

                    @Html.ActionLink(" ", "Eliminar", "Sucursal", new { id = item.iidsucursal }, new { @class = "bi bi-trash btn btn-danger" })

                </td>
            </tr>
        }
    </tbody>

</table>